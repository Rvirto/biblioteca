<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Properties>
		<Property name="default-pattern">%d{yyyy-MM-dd HH:mm:ss.SSS} %p %C{1}.%M %m%n</Property>
	</Properties>

	<Appenders>
    	<Console name="CONSOLE" target="SYSTEM_OUT">
     		<PatternLayout pattern="${default-pattern}"/>
    	</Console>
	</Appenders>
	
	<Loggers>
 		<Root level="info">
  			<AppenderRef ref="CONSOLE"/>
 		</Root>
	</Loggers>
</Configuration>